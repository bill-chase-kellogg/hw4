<% if @current_user %>
  <h1>New Post</h1>
  <%= form_with model: @post do |form| %>
      <div class="mb-3">
      <%= form.label "title" %>
      <%= form.text_field "title" %>
      </div>
      <div class="mb-3">
      <%= form.label "description" %>
      <%= form.text_field "description" %>
      </div>
      <div class="mb-3">
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
      </div>
      <div class="mb-3">
        <%= form.label "uploaded_image", class: "form-label" %>
        <%= form.file_field "uploaded_image", accept:"image/jpg, image/jpeg, image/png", class: "form-control" %>
      </div>
      <%= form.hidden_field "place_id" %>
      <div>
      <%= form.submit "Create Post", class: "btn btn-primary" %>
      </div>      
      <% end %>
  <% else %>
    You must first <a href="/sessions/new">login</a> to post.
  <% end %>

