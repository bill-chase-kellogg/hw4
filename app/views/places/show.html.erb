<h1><%= @place.name %></h1>
<div class ="mt-4">
</div>


  <p>
    <button type="button" class="btn btn-primary"><b><a href="/posts/new?place_id=<%= @place.id %>" class="link-light">New Post</a></button>
  </p>

<div class="mt-3">
<div class = "container-fluid">
<div class ="row">
<div class="col-md-3 col-sm-6">  
  <% for post in @place.posts.where(user_id: @current_user.id) %>        
        <h3><%= post.title %></h3>
        <h4><%= post.posted_on %></h4>

            <% if post.uploaded_image.attached? %>
            <img src= "<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% else %>
            <% end %>
            
        <p><%= post.description %></p>

  <% end %>   
  </div>  
  </div>
  </div>
  </div>


