<div class="p-3">
  <h1>
  <%= @place.name %>
  </h1>
</div>

<% if @current_user %>
  <div class="p-3">
    <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-primary">New Post</a>
  </div>
<% end %>

<div class="row">
  <% for post in @place.posts.where({ user_id: session[:user_id] }) %>
    <div class="col-md-4 col-sm-6">
      <div class="p-3">
        <h4>
          <%= post.title %>
        </h4>
        <p>
          <%= post.posted_on %>
        </p>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
         
        <% end %>
        <p>
          <%= post.description %>
        </p>
      </div> 
    </div>
  <% end %>
</div>


